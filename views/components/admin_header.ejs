<% if (message && message.length > 0) { %>
    <% message.forEach(msg => { %>
      <div class="message">
        <span><%= msg %></span>
        <i class="fas fa-times" onclick="this.parentElement.remove();"></i>
      </div>
    <% }) %>
  <% } %>
  
  <header class="header">
    <section class="flex">
      <a href="/dashboard" class="logo">Admin.</a>
  
      <form action="/search_page" method="post" class="search-form">
        <input type="text" name="search" placeholder="Search here..." required maxlength="100">
        <button type="submit" class="fas fa-search" name="search_btn"></button>
      </form>
  
      <div class="icons">
        <div id="menu-btn" class="fas fa-bars"></div>
        <div id="search-btn" class="fas fa-search"></div>
        <div id="user-btn" class="fas fa-user"></div>
        <div id="toggle-btn" class="fas fa-sun"></div>
      </div>
  
      <div class="profile">
        <% if (profile) { %>
          <img src="/uploaded_files/<%= profile.image %>" alt="Profile Picture">
          <h3><%= profile.name %></h3>
          <span><%= profile.profession %></span>
          <a href="/profile" class="btn">View Profile</a>
          <div class="flex-btn">
            <a href="/login" class="option-btn">Login</a>
            <a href="/register" class="option-btn">Register</a>
          </div>
          <a href="/admin_logout" onclick="return confirm('Logout from this website?');" class="delete-btn">Logout</a>
        <% } else { %>
          <h3>Please login or register</h3>
          <div class="flex-btn">
            <a href="/login" class="option-btn">Login</a>
            <a href="/register" class="option-btn">Register</a>
          </div>
        <% } %>
      </div>
    </section>
  </header>
  
  <!-- Sidebar Section -->
  <div class="side-bar">
    <div class="close-side-bar">
      <i class="fas fa-times"></i>
    </div>
  
    <div class="profile">
      <% if (profile) { %>
        <img src="/uploaded_files/<%= profile.image %>" alt="Profile Picture">
        <h3><%= profile.name %></h3>
        <span><%= profile.profession %></span>
        <a href="/profile" class="btn">View Profile</a>
      <% } else { %>
        <h3>Please login or register</h3>
        <div class="flex-btn">
          <a href="/login" class="option-btn">Login</a>
          <a href="/register" class="option-btn">Register</a>
        </div>
      <% } %>
    </div>
  
    <nav class="navbar">
      <a href="/admin/dashboard"><i class="fas fa-home"></i><span>Home</span></a>
      <a href="/admin/playlists"><i class="fa-solid fa-bars-staggered"></i><span>Playlists</span></a>
      <a href="/admin/contents"><i class="fas fa-graduation-cap"></i><span>Contents</span></a>
      <a href="/admin/comments"><i class="fas fa-comment"></i><span>Comments</span></a>
      <a href="/admin_logout" onclick="return confirm('Logout from this website?');"><i class="fas fa-right-from-bracket"></i><span>Logout</span></a>
    </nav>
  </div>
  <script src="../../routes/admin_header.js"></script>