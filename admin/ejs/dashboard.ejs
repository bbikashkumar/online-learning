<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="/css/admin_style.css">

</head>
<body>

<%- include('components/admin_header'); %>

<section class="dashboard">

    <h1 class="heading">dashboard</h1>

    <div class="box-container">

        <div class="box">
            <h3>welcome!</h3>
            <p><%= fetch_profile.name %></p>
            <a href="/profile" class="btn">view profile</a>
        </div>

        <div class="box">
            <h3><%= totalContents %></h3>
            <p>total contents</p>
            <a href="/add_content" class="btn">add new content</a>
        </div>

        <div class="box">
            <h3><%= totalPlaylists %></h3>
            <p>total playlists</p>
            <a href="/add_playlist" class="btn">add new playlist</a>
        </div>

        <div class="box">
            <h3><%= totalLikes %></h3>
            <p>total likes</p>
            <a href="/contents" class="btn">view contents</a>
        </div>

        <div class="box">
            <h3><%= totalComments %></h3>
            <p>total comments</p>
            <a href="/comments" class="btn">view comments</a>
        </div>

        <div class="box">
            <h3>quick select</h3>
            <p>login or register</p>
            <div class="flex-btn">
                <a href="/login" class="option-btn">login</a>
                <a href="/register" class="option-btn">register</a>
            </div>
        </div>

    </div>

</section>

<%- include('components/footer'); %>

<script src="/js/admin_script.js"></script>

</body>
</html>
